doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui')
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')

    title PasserBy

    link(href='css/framework7.min.css', type='text/css', rel='stylesheet')
    link(href='css/ionicons.min.css', type='text/css', rel='stylesheet')
    link(href='css/main.css', type='text/css', rel='stylesheet')

  body
    div(class='statusbar-overlay')
    div(class='panel-overlay')

    div(class='views')
      div(class='view view-main')
        div(class='pages')
          div(data-page='main', class='page toolbar-fixed')
            //- tab bar
            div(class='toolbar tabbar tabbar-labels-fixed')
              div(class='toolbar-inner')
                a(href='#tab-explore' class='tab-link active')
                  i(class='icon ion-android-locate')
                  //- span(class='tabbar-label') Explore

                a(href='#tab-statics' class='tab-link')
                  i(class='icon ion-podium')
                  //- span(class='tabbar-label') Statics

                a(href='#tab-achieve' class='tab-link')
                  i(class='icon ion-trophy')
                  //- span(class='tabbar-label') Achieves

                a(href='#tab-setting' class='tab-link')
                  i(class='icon ion-android-settings')
                  //- span(class='tabbar-label') Help

            div(class='page-content')
              div(class='content-block')
                div(class='tabs')

                  include explore.jade
                  include statics.jade
                  include achieve.jade
                  include setting.jade


    script(src='js/lib/framework7.js', type='text/javascript')
    script(src='js/app/app.js', type='text/javascript')
